<%= render "shared" %>

<div class="jumbotron">
  <div class="row">
    <div class="col-md-12" align="center">
      <table class="table table-striped table-bordered">
        <thead>
          <h1> Calvin is the Admin Portal </h1>
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>City</th>
            <th>State</th>
            <th>Email</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>     
          </tr>
        </thead>
        <tbody>
          <% @users.each do |users|%>
            <tr>
              <td><%=users.id%></td>
              <td><%=users.first_name%> <%=users.last_name%></td>
              <td><%=users.city_id%></td>
              <td><%=users.statename%></td>
              <td><%=users.email%></td>
              <td><%=link_to"Show", portal_path(users) %></td>
              <td><%=link_to"Edit", edit_portal_path(users)%></td>
              <td> <%= link_to "Delete", portal_path(users), method: :delete%></td>
            </tr>
          <%end%>
        </tbody>
      </table> 
    </div>
  </div>
</div>